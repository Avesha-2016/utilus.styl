foo($colorTheme = #f00 #0f0 #00f)
  +cache(arguments)
    color: $colorTheme[0]

    &__child
      color: $colorTheme[1]
      background-color: $colorTheme[2]

    &__next-child
      color: $colorTheme[2]
      text-shadow: 1px 1px $colorTheme[0]

.foo
  foo()

.sub
  foo(white black red)

.foo2
  foo()

.sub2
  foo(white black red)
